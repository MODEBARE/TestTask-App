@model TestTaskApp.Models.Users

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete User</h2>
        </div>

         <div class="mb-3">
        <label asp-for="FullName" class="form-label">Full Name</label>
        <input asp-for="FullName" disabled class="form-control"  placeholder="Luke Mohammed">
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email address</label>
        <input asp-for="Email" disabled class="form-control" placeholder="name@example.com">
    </div>
    <div class="mb-3">
        <label asp-for="UserContact.Mobile" class="form-label">Mobile Number</label>
        <input asp-for="UserContact.Mobile" disabled class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Gender" class="form-label">Gender</label>
        <input asp-for="Gender" disabled class="form-control">
    </div>
      
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete"  />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }
