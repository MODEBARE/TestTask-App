@model IEnumerable<TestTaskApp.Models.Users>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users List</h2>
        </div>
        <div>
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">Create new User</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Full Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Mobile Number
                    </th>
                    <th>
                        Gender
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var Users in Model)
                {
                    <tr>
                        <td width="30%">@Users.FullName</td>
                        <td width="30%">@Users.Email</td>
                        <td width="30%">@Users.UserContact</td>
                        <td width="30%">@Users.Gender</td>
                       

                        <td width="40%">
                            <div class="col-6 text-right">
                                <a asp-controller="User" asp-action="Update" asp-route-Id="@Users.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="User" asp-action="Delete" asp-route-Id="@Users.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>

                        </td>



                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>